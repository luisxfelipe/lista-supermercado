<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="br.com.listamercado.app.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista de Super Mercado"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="21sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="25dp"></View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do produto"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ex: Arroz"
        android:id="@+id/txt_produto"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="incluir"
        android:onClick="inserirItem"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_view"></ListView>

</LinearLayout>
